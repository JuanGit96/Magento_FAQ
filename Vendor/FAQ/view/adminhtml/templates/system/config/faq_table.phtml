<?php
/**
 * @var $block Vendor\FAQ\Block\Adminhtml\System\Config\FAQTable
 */
?>

<?php $faqCollection = $block->getFaqCollection(); ?>
<?php if ($faqCollection->getSize() > 0): ?>
    <table class="admin__control-table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Sort Order</th>
        </tr>
        </thead>
        <tbody>
        <?php foreach ($faqCollection as $faq): ?>
            <tr>
                <td><?php echo $faq->getFaqId(); ?></td>
                <td><?php echo $faq->getQuestion(); ?></td>
                <td><?php echo $faq->getAnswer(); ?></td>
                <td><?php echo $faq->getSortOrder(); ?></td>
            </tr>
        <?php endforeach; ?>
        </tbody>
    </table>
<?php else: ?>
    <p><?php echo __('No FAQs found.'); ?></p>
<?php endif; ?>
